{
  "dashboard": {
    "id": null,
    "title": "Kafka Cluster Monitoring",
    "tags": ["kafka", "streaming", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Kafka Broker Metrics",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(kafka_server_brokertopicmetrics_bytesin_total{instance=~\"$instance\"})",
            "legendFormat": "Bytes In"
          },
          {
            "expr": "sum(kafka_server_brokertopicmetrics_bytesout_total{instance=~\"$instance\"})",
            "legendFormat": "Bytes Out"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Topic Message Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum by (topic) (rate(kafka_server_brokertopicmetrics_messagesin_total{instance=~\"$instance\", topic=~\"$topic\"}[5m]))",
            "legendFormat": "{{topic}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "min": 0
          }
        }
      },
      {
        "id": 3,
        "title": "Consumer Lag",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "kafka_consumergroup_lag{group=~\"$consumer_group\", topic=~\"$topic\"}",
            "legendFormat": "{{group}} - {{topic}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1000},
                {"color": "red", "value": 10000}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Controllers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "kafka_controller_activecontrollercount",
            "legendFormat": "Active Controllers"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 2}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Under Replicated Partitions",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "sum(kafka_cluster_partition_underreplicated)",
            "legendFormat": "Under Replicated"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Network Processor Idle Percentage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "avg by (instance) (kafka_network_socket_server_networkprocessoravgidlepercent)",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "green", "value": 80}
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1,
    "links": []
  }
}